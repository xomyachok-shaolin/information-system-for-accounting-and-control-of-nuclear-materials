procedure TForm17.Button8Click(Sender: TObject);

var h1, h2:string;

begin

  h1 := '%'+Form17.DBEdit1.Text+'%';
  h2 := QuotedStr(h1);

  with Form31.ADOQuery2 do
  begin
    close;
    SQL.Clear;
    SQL.Add('select * from местополож where ИД_ПОМЕЩЕЩЕНИЯ like'+h2);
    Open;
  end;

  Form31.DBEdit5.Text := Form31.ADOQuery2.FieldByName('ЗБМ').AsString;
  Form31.DBEdit6.Text := Form31.ADOQuery2.FieldByName('Здание').AsString;
  Form31.DBEdit7.Text := Form31.ADOQuery2.FieldByName('Помещение').AsString;

  close;

end;

